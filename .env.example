# Database
DATABASE_URL=sqlite:///check.db

# Flask Secret Key (change in production!)
SECRET_KEY=dev-secret-key-please-change-in-production

# Telegram Bot Configuration
# Get Bot Token from @BotFather in Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Mini App URL (optional)
# If not set, will be auto-generated as https://t.me/{bot_username}/app
# For custom domains or development with ngrok: https://xxxx.ngrok-free.app
MINI_APP_URL=

# Telegram Mock for Local Development
TELEGRAM_MOCK=true
# Bot Reminder Settings
# Time to send daily reminders (24-hour format HH:MM)
BOT_REMINDER_TIME=20:00

# Timezone for reminders (see: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
# Examples: UTC, Europe/Moscow, America/New_York, Asia/Tokyo
BOT_TIMEZONE=UTC

# Enable or disable daily reminders
BOT_REMINDERS_ENABLED=true
